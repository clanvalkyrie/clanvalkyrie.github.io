        "npc":[1011],
        "self":1350,
        "choices":[
            {"text":"(Continuar)", "next":10028}
        ]
    },
    {
        "id":10028,
        "type":"npc_dialog", 
        "text":"A mí me encanta la idea, sería divertido.",
        "background":124,
        "npc":[1300],
        "self":1350,
        "choices":[
            {"text":"(Continuar)", "next":10029}
        ]
    },
    {
        "id":10029,
        "type":"npc_dialog", 
        "text":"Auguro cosas buenas si damos una fiesta.",
        "background":124,
        "npc":[1400],
        "self":1350,
        "choices":[
            {"text":"(Continuar)", "next":10030}
        ]
    },
    {
        "id":10030,
        "type":"npc_dialog", 
        "text":"Pues a mí también me gustaría. Sería algo nuevo, después de todo lo que hemos pasado.",
        "background":124,
        "npc":[1100],
        "self":1350,
        "choices":[
            {"text":"¡Esa es la energía que quiero, genial!", "next":10031}
        ]
    },
    {
        "id":10031,
        "type":"npc_dialog",
        "text":"",
        "background":124,
        "npc":[1150],
        "self":1350,
        "choices":[
            {"text":"¿Qué opinas tú, Vidalia?", "next":10032}
